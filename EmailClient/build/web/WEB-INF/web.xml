<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.client.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailServer</servlet-name>
        <servlet-class>com.client.EmailServer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>com.client.CaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailServlet</servlet-name>
        <servlet-class>com.client.EmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>readMessage</servlet-name>
        <servlet-class>com.client.readMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>decryptServlet</servlet-name>
        <servlet-class>com.client.decryptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailServer</servlet-name>
        <url-pattern>/EmailServer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/CaptchaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailServlet</servlet-name>
        <url-pattern>/EmailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>readMessage</servlet-name>
        <url-pattern>/readMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>decryptServlet</servlet-name>
        <url-pattern>/decryptServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
